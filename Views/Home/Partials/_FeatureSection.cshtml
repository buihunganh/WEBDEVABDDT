@* Feature: liệt kê tối đa 8 sản phẩm nổi bật *@
<section class="feature-section my-5" id="features">
    <div class="container-fluid px-4">
        <h2 class="section-title text-center fw-bold mb-5">Feature</h2>
        <div class="row g-4">
@{ var i = 0; }
@foreach (var p in (ViewBag.Featured as IEnumerable<BTL_WEBDEV2025.Models.Product> ?? new List<BTL_WEBDEV2025.Models.Product>()))
{
    if (i++ >= 8) { break; }
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="feature-card h-100 border-0 overflow-hidden">
                    <div class="feature-image d-flex align-items-center justify-content-center" style="height: 250px; background: #f5f7fa;">
                        <img src="@p.ImageUrl" alt="@p.Name" class="w-100 h-100" loading="lazy" decoding="async" />
                    </div>
                    <div class="p-4">
                        <h5 class="fw-bold mb-1">@p.Name</h5>
                        <p class="text-muted small mb-2">@p.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="fw-bold">@String.Format(System.Globalization.CultureInfo.GetCultureInfo("en-US"), "{0:C}", p.Price)</div>
                            <a href="/Products/Index" class="btn btn-outline-dark btn-sm">Shop Now</a>
                        </div>
                    </div>
                </div>
            </div>
}
        </div>
    </div>
</section>


