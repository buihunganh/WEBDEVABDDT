@* Hero: video nền + nội dung tiêu đề và CTA *@
<section class="hero-section my-0">
    <div class="container-fluid px-0">
        <div class="hero-banner position-relative d-flex align-items-end justify-content-center has-video"
             style="min-height: 80vh; background: #000;">
            <video class="hero-video-bg" autoplay muted loop playsinline preload="metadata">
                <source src="/media/videos/hero.mp4" type="video/mp4" />
            </video>

            <div class="hero-overlay" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: linear-gradient(to bottom, rgba(0,0,0,0.3) 0%, rgba(0,0,0,0.1) 50%, rgba(0,0,0,0.6) 100%); z-index: 1;"></div>

            <div class="position-absolute w-100 h-100 d-flex align-items-end justify-content-center hero-content-layer" style="bottom: 80px; left: 0;">
                <div class="text-center px-4" style="max-width: 700px;">
                    <p class="mb-2 hero-small-text" style="font-size: 0.875rem; font-weight: 400; color: #ffffff;">
                        LeBron XXIII
                    </p>

                    <h1 class="fw-bold mb-3 hero-main-title" style="font-size: clamp(1.5rem, 5vw, 4rem); letter-spacing: -0.02em; line-height: 1.1; color: #ffffff;">
                        'THE CHOSEN ONE<br/>AND THE ONE WHO CHOSE'
                    </h1>

                    <p class="mb-4 hero-subtitle" style="font-size: clamp(0.875rem, 2vw, 1rem); font-weight: 400; color: #ffffff;">
                        Sharing the court with your son appeared unlikely. LeBron made it history.
                    </p>

                    <div class="d-flex gap-2 gap-md-3 justify-content-center flex-wrap">
                        <a asp-controller="Cart" asp-action="Index" class="btn btn-dark px-3 px-md-5 py-2 py-md-3 fw-bold" style="border-radius: 30px; font-size: clamp(0.85rem, 1.5vw, 0.95rem); background: #000; border: none; text-decoration: none;">
                            Shop Now
                        </a>
                        <button class="btn btn-outline-dark px-3 px-md-5 py-2 py-md-3" style="border-radius: 30px; font-size: clamp(0.85rem, 1.5vw, 0.95rem); background: transparent; border: 2px solid #000; color: #000;">
                            <i class="bi bi-play-circle me-2"></i>Watch
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

