@model BTL_WEBDEV2025.ViewComponents.ProductFilterViewModel

<form class="filter-bar shadow-sm rounded bg-white my-2" autocomplete="off" onsubmit="return false;" style="padding: 12px 16px;">
    <div class="d-flex flex-wrap align-items-end gap-3">
        <div style="min-width: 90px;">
            <label class="form-label small text-muted mb-1" style="font-size: 0.75rem; font-weight: 500;">Min price</label>
            <input type="number" min="0" step="1" class="form-control border-0 bg-light" id="@Model.MinPriceId" style="width: 100%; height: 36px; font-size: 0.875rem;">
        </div>
        <div style="min-width: 90px;">
            <label class="form-label small text-muted mb-1" style="font-size: 0.75rem; font-weight: 500;">Max price</label>
            <input type="number" min="0" step="1" class="form-control border-0 bg-light" id="@Model.MaxPriceId" style="width: 100%; height: 36px; font-size: 0.875rem;">
        </div>
        <div style="min-width: 120px;">
            <label class="form-label small text-muted mb-1" style="font-size: 0.75rem; font-weight: 500;">Brand</label>
            <select class="form-select border-0 bg-light" id="@Model.BrandSelectId" style="height: 36px; font-size: 0.875rem;">
                <option value="">All</option>
                @foreach(var brand in Model.Brands)
                {
                    <option value="@brand">@brand</option>
                }
            </select>
        </div>
        <div style="min-width: 120px;">
            <label class="form-label small text-muted mb-1" style="font-size: 0.75rem; font-weight: 500;">Sort</label>
            <select class="form-select border-0 bg-light" id="@Model.SortSelectId" style="height: 36px; font-size: 0.875rem;">
                <option value="asc">Price ↑</option>
                <option value="desc">Price ↓</option>
            </select>
        </div>
        <div class="d-flex gap-2 ms-auto">
            <button type="button" class="btn btn-primary btn-sm px-3" id="@Model.ApplyButtonId" style="height: 36px; font-size: 0.875rem; white-space: nowrap;"><i class="bi bi-funnel"></i> Filter</button>
            <button type="button" class="btn btn-secondary btn-sm px-2" id="@Model.ResetButtonId" title="Clear filters" style="height: 36px; width: 36px; padding: 0; display: flex; align-items: center; justify-content: center;"><i class="bi bi-x-lg"></i></button>
        </div>
    </div>
</form>

